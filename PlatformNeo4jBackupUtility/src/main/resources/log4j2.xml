<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%t]:%c{3}.%M()%L %-5p:: %m%n" />
		</Console>
 
		<RollingFile name="RollingFile" filename="${env:INSIGHTS_HOME}/logs/PlatformNeo4jBackupUtility/PlatformNeo4jBackupUtility.log"
			filepattern="${env:INSIGHTS_HOME}/logs/PlatformNeo4jBackupUtility/log4j_PlatformNeo4jBackupUtility.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%t]:%c{3}.%M()%L %-5p:: %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		
		<RollingFile name="RollingFileSkipEntries" filename="${env:INSIGHTS_HOME}/logs/PlatformNeo4jBackupUtility/PlatformNeo4jBackupUtilitySkipEntries.log"
			filepattern="${env:INSIGHTS_HOME}/logs/PlatformNeo4jBackupUtility/log4j_PlatformNeo4jBackupUtilitySkipEntries.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%t]:%c{3}.%M()%L %-5p:: %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
 
	</Appenders>
		<Loggers>
		<Logger name="RollingFile" level="debug" additivity="false"> 
				<AppenderRef ref="RollingFile" />
		</Logger>
		<Logger name="com.cognizant" level="debug" additivity="false"> 
				<AppenderRef ref="RollingFileSkipEntries" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="RollingFileSkipEntries" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>