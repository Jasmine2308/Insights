<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
 
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p [%t]:%c{3}.%M()%L %-5p:: %m%n" />
		</Console>
 
		<RollingFile name="RollingFile" filename="${env:INSIGHTS_HOME}/logs/PlatformTests/PlatformTests.log"
			filepattern="${env:INSIGHTS_HOME}/logs/PlatformTests/log4j_PlatformTests.log">
			<PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} %p [%t]:%c{3}.%M()%L - %m%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
			<DefaultRolloverStrategy max="20" />
		</RollingFile>
		
	</Appenders>
	
	<Loggers>
		<Logger name="RollingFile" level="debug">
				<AppenderRef ref="RollingFile" />
		</Logger>

		<Logger name="Console" level="debug">
				<AppenderRef ref="Console" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="Console" />
		</Root>
		<logger name="org.hibernate">
		  <level value="error"/> 
		</logger>
	</Loggers>

</Configuration>